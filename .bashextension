# --- Aliases ---
alias fd='fdfind'
alias bat='batcat'  # On some systems, the bat command is named batcat
alias cat='bat --paging=never'
alias grep='rg'
alias s='sudo'
alias dcu='docker-compose up -d'
alias dcd='docker-compose down'
alias l='ls'
alias la='ls -lah'
alias vim='nvim'
alias less='less -FRSiX' 

# --- FZF Configuration ---
# Set up fzf to use fd for finding files
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --no-ignore'

# Source fzf key bindings if the file exists
[ -f /usr/share/doc/fzf/examples/key-bindings.bash ] && source /usr/share/doc/fzf/examples/key-bindings.bash

# --- Oh My Posh Configuration ---
# Add local user binaries to the PATH
export PATH="$PATH:$HOME/.local/bin"

# Initialize Oh My Posh with a custom theme
# This assumes your custom theme will be located at ~/.leonardo/ohmyposh/
eval "$(oh-my-posh init bash --config ~/.leonardo/ohmyposh/purecustom.omp.json)"

#zoxide
eval "$(zoxide init bash)"

#nvim
export XDG_CONFIG_HOME="$HOME/.leonardo"
